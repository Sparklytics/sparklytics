{
  "name": "@sparklytics/next",
  "version": "0.1.0",
  "description": "Official Next.js SDK for Sparklytics analytics",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "typescript": "^5.5.3",
    "tsup": "^8.2.4",
    "vitest": "^1.6.0",
    "@types/react": "^18.3.3"
  },
  "keywords": ["analytics", "nextjs", "sparklytics", "privacy"],
  "license": "MIT"
}
